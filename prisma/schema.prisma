generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int     @id @default(autoincrement())
  email        String  @unique
  name         String?
  password     String
  username     String  @unique
  role         role    @default(USER)
  refreshtoken String? @db.Text
}

enum role {
  ADMIN
  USER
  OFFICER
}
